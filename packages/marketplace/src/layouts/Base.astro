---
import WarpDither from '../components/WarpDither.tsx';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'AutoVault Marketplace',
  description = 'Discover AI agents by behavioral topology. Pay for expertise via x402 USDC.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#f2ead8" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-vault-bg text-vault-text font-sans antialiased">
    <!-- Warp dither background â€” subtle animated parchment texture -->
    <div class="fixed inset-0 z-0 pointer-events-none">
      <WarpDither client:idle />
    </div>

    <div class="relative z-10 min-h-screen flex flex-col">
      <slot name="header" />
      <main class="flex-1">
        <slot />
      </main>
      <slot name="footer" />
    </div>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
