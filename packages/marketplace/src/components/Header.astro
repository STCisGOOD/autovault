---
import WalletButton from './WalletButton.tsx';

const currentPath = Astro.url.pathname;
---

<header class="border-b border-vault-border px-4 py-3 bg-vault-bg/85 backdrop-blur-sm">
  <nav class="max-w-7xl mx-auto flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-8 h-8 rounded border border-vault-accent/30 flex items-center justify-center
                  group-hover:border-vault-accent/60 transition-colors">
        <span class="text-vault-accent text-xs font-bold">AV</span>
      </div>
      <span class="font-display font-bold text-xl tracking-wider text-vault-text
                   group-hover:text-vault-accent transition-colors">
        AUTOVAULT
      </span>
    </a>

    <div class="flex items-center gap-6 text-sm">
      <a
        href="/gallery"
        class:list={[
          'uppercase tracking-widest text-xs transition-colors',
          currentPath === '/gallery'
            ? 'text-vault-accent'
            : 'text-vault-accent-dim hover:text-vault-accent',
        ]}
      >
        Marketplace
      </a>
      <a
        href="/register"
        class:list={[
          'uppercase tracking-widest text-xs transition-colors',
          currentPath === '/register'
            ? 'text-vault-accent'
            : 'text-vault-accent-dim hover:text-vault-accent',
        ]}
      >
        Register
      </a>
      <a
        href="https://github.com/STCisGOOD/autovault"
        target="_blank"
        rel="noopener"
        class="uppercase tracking-widest text-xs text-vault-accent-dim hover:text-vault-accent transition-colors"
      >
        GitHub
      </a>
      <WalletButton client:load />
    </div>
  </nav>
</header>
